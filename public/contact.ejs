<script>

  function validateForm() {
    var a = document.forms["Form"]["message"].value;
    var b = document.forms["Form"]["name"].value;
    var c = document.forms["Form"]["email"].value;
    var d = document.forms["Form"]["subject"].value;
    if (a == null || a == "", b == null || b == "", c == null || c == "", d == null || d == "") {
      $("#response").html("Please Fill All Required Field");
        $("#response").css("color","#ff0000");

    }else{
      $("#response").html("Thanks your email has received we will contact you in 24 hours.");
        $("#response").css("color","#00b300");
    }
  }


</script>

