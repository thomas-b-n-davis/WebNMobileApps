<% include ./partials/footer %>
<script>
  var itemObject = JSON.parse(localStorage.getItem("itemObject"));
  document.getElementById('name').innerHTML = itemObject.name;
  document.getElementById('price').innerHTML = itemObject.price;
  document.getElementById('description').innerHTML = itemObject.description;

  var imgArray = new Array();

  let htmlData = "";

  for (var i = 0; i < itemObject.image.length; i++) {
    htmlData += `
    <div data-thumb="`+itemObject.image[i].path+ `">
      <img src="`+itemObject.image[i].path+`"/>
    </div>
    `
  }

  $("#vertical").html(htmlData);

  var product_overview = $('#vertical');
  if(product_overview.length){
   product_overview.lightSlider({
     gallery:true,
     item:1,
     verticalHeight:450,
     thumbItem:4,
     slideMargin:0,
     speed:600,
     autoplay: true,
     responsive : [
       {
           breakpoint:991,
           settings: {
               item:1,
             }
       },
       {
           breakpoint:576,
           settings: {
               item:1,
               slideMove:1,
               verticalHeight:350,
             }
       }
   ]
   });
  }

</script>