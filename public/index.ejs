    <script>
        var settings = {
          "url": "http://localhost:28090/product/getAll",
          "method": "GET",
          "timeout": 0,
          "headers": {
            "Content-Type": "application/x-www-form-urlencoded"
          }
        };

        $.ajax(settings).done(function (response) {
            let htmlData="";
            for(var data in response.rows){
                let innerData = response.rows[data];
                let imageObject = innerData.image[0];
                htmlData += `
                <div class="single_arrivel_item weidth_3 mix women men">
                        <a href="/product"> <img src="`+ imageObject.path+`" alt="#">
                    <div class="hover_text">
                        <p>`+innerData.name+`</p>
                        <h3>`+innerData.description+`</h3>
                        <h5>`+innerData.price+`</h5>
                    </div>
                </a>
                </div>
                `                

            }
            $("#data-to-append").html(htmlData);
        });
</script>